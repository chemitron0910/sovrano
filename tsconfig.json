{
  "compilerOptions": {
    /* ✅ Core settings */
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "node",

    /* ✅ Interop & safety */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,

    /* ✅ React Native + Expo specifics */
    "types": ["react", "react-native", "expo"],

    /* ✅ Path alias for cleaner imports */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    /* ✅ Optional extras */
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
